{
  "name": "Select Search Shortcut",
  "version": "1.0",
  "description": "Keyboard shorcut to auto search currently selected text.",
  "manifest_version": 2,
  "icons": {
    "16": "./selectSearchIcon16.png",
    "48": "./selectSearchIcon48.png",
    "128": "./selectSearchIcon128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "search": {
      "description": "Open new tab with google search",
      "suggested_key": {
        "default": "Ctrl+G",
        "mac": "MacCtrl+G"
      }
    }
  }
}
